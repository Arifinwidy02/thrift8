<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>

<body>
    <%- include('./partial/stylebs.ejs') %>
        <h2 class="text-center">Add Your Coffee Here</h2>
        <div class="container">

            <form action="/add" method="post">
                <% if(errors){ %>
                    <p style="color: red;">
                      <%= errors.err %>
                    </p>
                    <% } %>
                <!-- 2 column grid layout with text inputs for the first and last names -->
            <div class="row mb-4">
                <div class="col">
                    <div class="form-outline">
                        <input type="text" id="form6Example1" class="form-control" name="name"
                            placeholder="Product Name" />
                    </div>
                </div>
                <div class="col">
                    <div class="form-outline">
                        <select class="form-control" name="CategoryId" id="cars">
                            <option selected>---> Check your Category <---</option>
                            <option value="1">roasted</option>
                            <option value="2">greenbean</option>
                            <option value="3">luwak coffee</option>
                            <option value="4">robusta</option>
                            <option value="5">arabica</option>
                            <option value="6">bali kintamani</option>
                            <option value="7">excelsa</option>
                            <option value="8">gayo</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Text input -->
            <div class="form-outline mb-4">
                <input type="number" name="stock" id="form6Example3" class="form-control"
                    placeholder="Input Stock Here" />
            </div>
            
            <!-- Text input -->
            <div class="form-outline mb-4">
                <input type="number" name="price" id="form6Example4" class="form-control"
                    placeholder="Input Price Here" />
            </div>

            
            
            <!-- Number input -->
            <div class="form-outline mb-4">
                <input type="text" name="imageUrl" placeholder="Input Image Here" id="form6Example6"
                class="form-control" />
            </div>
            <!-- Submit button -->
            <button type="submit" class="btn btn-primary btn-block mb-4">Submit</button>
        </form>
    </div>
</body>

</html>