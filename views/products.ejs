<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <%- include('./partial/stylebs.ejs') %>
</head>

<body>
    <h2 class="text-center">Product Home</h2>
    <a href="/products/checkout">Cart</a>
    <% if (notification) { %>
        <p style="color: Tomato;">
            <%=notification %>
        </p>
        <% } %>
            Search Here
            <!-- Search form -->
            <input class="form-control" type="text" placeholder="Search" aria-label="Search">
            <!-- end of Search form -->
            <a href="/add"><button>Add Product</button></a>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">Product Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach(e=> { %>
                        <tr>
                            <td scope="row">
                                <%= e.name %>
                            </td>
                            <td>
                                <%= e.Category.name %>
                            </td>
                            <td>
                                <%= e.kopi%>
                            </td>
                            <td>
                                <%= toRupiah(e.price) %>
                            </td>
                            <td><img src="<%=e.imageUrl  %>"></td>
                            <% if(session.role==`owner`){ %>
                                <td><a href="/products/buy/<%=e.id%>"><button>Buy</button></a>
                                    <a href="/products/<%=e.id%>/delete"><Button>Delete</Button></a>
                                </td>
                                <% } else { %>
                                    <td><a href="/products/buy/<%=e.id%>"><button>Buy</button></a>
                                        <% } %>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

</body>

</html>