<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <%- include('./partial/stylebs.ejs') %>
</head>

<body>
    <h2 class="text-center">Product Home</h2>
    <% let totalBelanja = 0%>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">No.</th>
                        <th scope="col">Nama</th>
                        <th scope="col">Price</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% data.forEach((el, idx)=> { %>
                        <tr>
                            <td scope="row"><%= idx + 1 %></td>
                            <td><%= el.name %></td>
                            <td><%= el.price %> <%totalBelanja += el.price%></td>
                            <td><a href="/products/<%= el.id %>/cart/delete">Delete</a></td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
                <h3>Total Belanja : <%=totalBelanja%></h3>
                <a href="/products/cart/purchase">
                    <button>Bayar</button>
                </a>
                <a href="/products">
                    <button>Kembali</button>
                </a>
</body>

</html>